body, h1, h2, p, ul, li, button {
    margin: 0;
    padding: 0;
}

body {
    font-family: Arial, sans-serif;
    background-color: #f0f0f0;
}

header {
    background-color: #373f45;
    color: #fff;
    text-align: center;
    padding: 20px;
}

header h1 {
    font-size: 24px;
}

main {
    max-width: 800px;
    margin: 20px auto;
    background-color: #fff;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

section {
    margin-bottom: 20px;
}

button {
    background-color: #87CEEB; /* Change the button color to blue */
    color: #fff;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
}

button:hover {
    background-color: #005a99;
}

.question {
    border: 1px solid #ccc;
    padding: 10px;
    margin-bottom: 10px;
}

.question h3 {
    font-size: 18px;
    margin-bottom: 10px;
}

label {
    display: block;
    margin-bottom: 5px;
}

input[type="radio"],
input[type="checkbox"] {
    margin-right: 5px;
}

/* Style the results section */
#results {
    display: none;
    background-color: #f0f0f0;
    padding: 20px;
    border: 1px solid #ccc;
}

footer {
    text-align: center;
    margin-top: 20px;
    color: #777;
    font-size: 14px;
}

@media (max-width: 768px) {
    main {
        padding: 10px;
    }
}
