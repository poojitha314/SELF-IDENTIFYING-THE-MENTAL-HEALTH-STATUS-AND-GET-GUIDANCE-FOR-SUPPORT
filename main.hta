<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SIGN IN AND SIGN UP</title>
    <link rel="stylesheet" href="mstyle.css">
    <script src="https://kit.fontawesome.com/86e3f07fec.js" crossorigin="anonymous"></script>
    <style>
        /* Add your CSS styles here */
        /* ... */
    </style>
</head>
<body>
    <div class="container">
        <div class="logo">
            <img src="log.jpg" alt="Logo">
        </div>
        <div class="form-box">
            <div class="tab">
                <button class="tablinks" onclick="openTab(event, 'signIn')" id="signInTab">Sign In</button>
                <button class="tablinks" onclick="openTab(event, 'signUp')" id="signUpTab">Sign Up</button>
            </div>

            <!-- Sign In Form -->
            <div id="signIn" class="tabcontent">
                <h1>Sign In</h1>
                <form method="POST" action="process.php">
                    <input type="text" name="signInEmail" placeholder="Email" required>
                    <input type="password" name="signInPassword" placeholder="Password" required>
                    <button type="submit" class="sign-in-btn">Sign In</button>
                </form>
            </div>

            <!-- Sign Up Form -->
            <div id="signUp" class="tabcontent">
                <h1>Sign Up</h1>
                <form method="POST" action="process.php">
                    <input type="text" name="signUpName" placeholder="Name" required>
                    <input type="text" name="signUpEmail" placeholder="Email" required>
                    <input type="password" name="signUpPassword" placeholder="Password" required>
                    <button type="submit" class="sign-up-btn">Sign Up</button>
                </form>
            </div>
        </div>
        
        <!-- Icons for toggling forms -->
        <div class="icons">
            <i class="fas fa-sign-in-alt" onclick="openTab(event, 'signIn')"></i>
            <i class="fas fa-user-plus" onclick="openTab(event, 'signUp')"></i>
        </div>
    </div>

    <script>
        // JavaScript function to open the default tab
        function defaultTab() {
            const signInButton = document.getElementById("signInTab");
            signInButton.click(); // Open the default tab
        }

        // Call the defaultTab function when the page loads
        window.onload = defaultTab;

        function openTab(evt, tabName) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            document.getElementById(tabName).style.display = "block";
            evt.currentTarget.className += " active";
        }
    </script>
</body>
</html>
